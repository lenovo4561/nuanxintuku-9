<template>
  <div class="container">
    <image class="bg" src="/assets/img/bg.png"></image>

    <!-- 自定义顶部导航栏 -->
    <div class="title-bar">
      <div class="back-btn" @click="back">
        <image class="back-icon" src="/assets/img/back.png"></image>
      </div>
      <text class="page-title">{{ title }}</text>
      <div class="placeholder-btn"></div>
    </div>

    <!-- 列表 -->
    <list class="list">
      <list-item type="wallpapers" class="wallpaper-grid">
        <div
          class="common-item {{$item.isAvatar ? 'avatar-item' : 'wallpaper-item'}}"
          for="{{wallpaperList}}"
          onclick="openWallpaper($item)"
        >
          <stack class="wallpaper-stack">
            <image class="wallpaper-image" src="{{$item.src}}"></image>

            <!-- 最新标签 -->
            <div class="new-tag-wrap" if="{{$item.isNew}}">
              <stack class="new-tag-stack">
                <image
                  class="new-tag-bg"
                  src="/assets/img/biaoqianbg.png"
                ></image>
                <text class="new-tag-text">最新</text>
              </stack>
            </div>
          </stack>
        </div>
      </list-item>

      <!-- 底部占位 -->
      <list-item type="spacer" style="height: 12px;"></list-item>
    </list>
  </div>
</template>

<script>
import router from '@system.router'

export default {
  protected: {
    title: '分类',
    type: ''
  },
  private: {
    wallpaperList: []
  },
  onInit() {
    this.loadWallpapers()
  },
  loadWallpapers() {
    const list = []
    let baseUrl = ''
    let isAvatar = false

    // 根据类型设置对应的图片地址
    // 壁纸类型
    if (this.type === 'dongman') {
      baseUrl = 'https://cdn.shijinzhuang.com/qcloud/bz/dm/'
    } else if (this.type === 'renwu') {
      baseUrl = 'https://cdn.shijinzhuang.com/qcloud/bz/rw/'
    } else if (this.type === 'mengchong') {
      baseUrl = 'https://cdn.shijinzhuang.com/qcloud/bz/mc/'
    } else if (this.type === 'ziran') {
      baseUrl = 'https://cdn.shijinzhuang.com/qcloud/bz/zr/'
    }
    // 头像类型
    else if (this.type === 'tx_dongman') {
      baseUrl = 'https://cdn.shijinzhuang.com/qcloud/tx/dm/'
      isAvatar = true
    } else if (this.type === 'tx_renwu') {
      baseUrl = 'https://cdn.shijinzhuang.com/qcloud/tx/rw/'
      isAvatar = true
    } else if (this.type === 'tx_mengchong') {
      baseUrl = 'https://cdn.shijinzhuang.com/qcloud/tx/mc/'
      isAvatar = true
    } else if (this.type === 'tx_ziran') {
      baseUrl = 'https://cdn.shijinzhuang.com/qcloud/tx/zr/'
      isAvatar = true
    } else {
      // 默认使用壁纸动漫
      baseUrl = 'https://cdn.shijinzhuang.com/qcloud/bz/dm/'
    }

    // 生成1-20的图片列表
    for (let i = 1; i <= 20; i++) {
      list.push({
        src: `${baseUrl}${i}.jpg`,
        isNew: i <= 3,
        isAvatar: isAvatar
      })
    }

    this.wallpaperList = list
  },
  openWallpaper(item) {
    const detailPage = item.isAvatar
      ? '/pages/AvatarDetail'
      : '/pages/WallpaperDetail'
    router.push({
      uri: detailPage,
      params: {
        imageUrl: item.src
      }
    })
  },
  back() {
    router.back()
  }
}
</script>

